{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "deploy",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es2015",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "types": [
            "node",
            "react",
            "react-dom",
            "lodash"
        ],
        "noImplicitAny": false,
        "baseUrl": ".",
        "jsx": "react",
        "allowJs": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "src/*": [
                "./src/*"
            ],
            "utils/*": [
                "./src/utils/*"
            ],
            "pages/*": [
                "./src/pages/*"
            ],
            "@/*": [
                "./src/*"
            ],
            "~/*": [
                "./src/components/*"
            ],
        },
        "forceConsistentCasingInFileNames": true
    },
    "awesomeTypescriptLoaderOptions": {
        "transpileOnly": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ]
}